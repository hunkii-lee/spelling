{
  "manifest_version": 2,

  "name": "한국어 맞춤법 검사기",
  "description": "한국어 맞춤법 검사기입니다. 검사를 원하는 부분을 드레그하여 선택 후 아이콘을 누르면 검사 결과가 나옵니다..",
  "version": "1.2",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contents.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/check.png"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+K",
        "mac": "Command+Shift+K",
        "chromeos": "Ctrl+Shift+K",
        "linux": "Ctrl+Shift+K"
      }
    }

  },

  "permissions": [
    "activeTab"
  ]
}